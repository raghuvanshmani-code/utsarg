/**
 * @file Firestore Security Rules
 * @description This ruleset allows full read and write access to all data for administrative purposes, effectively bypassing authentication and authorization checks. This is **ONLY** appropriate for prototyping or internal testing environments where security is not a primary concern. **DO NOT USE IN PRODUCTION**.
 * @dataStructure All data is stored in top-level collections such as /users/{userId}, /clubs/{clubId}, etc.
 * @keySecurityDecision All read and write operations are allowed without authentication.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Allows read and write access to all user profiles.
     * @path /users/{userId}
     * @allow (read, write) Any user can read or modify any user profile.
     * @deny (none) There are no restrictions.
     * @principle Allows full read and write access.
     */
    match /users/{userId} {
      allow get, list: if true;
      allow create, update, delete: if true;
    }

    /**
     * @description Allows read and write access to the society metadata document.
     * @path /society/meta
     * @allow (read, write) Any user can read or modify the society metadata.
     * @deny (none) There are no restrictions.
     * @principle Allows full read and write access.
     */
    match /society/meta {
      allow get, list: if true;
      allow create, update, delete: if true;
    }

    /**
     * @description Allows read and write access to all club documents.
     * @path /clubs/{clubId}
     * @allow (read, write) Any user can read or modify any club document.
     * @deny (none) There are no restrictions.
     * @principle Allows full read and write access.
     */
    match /clubs/{clubId} {
      allow get, list: if true;
      allow create, update, delete: if true;
    }

    /**
     * @description Allows read and write access to all volunteer profiles.
     * @path /volunteers/{volunteerId}
     * @allow (read, write) Any user can read or modify any volunteer profile.
     * @deny (none) There are no restrictions.
     * @principle Allows full read and write access.
     */
    match /volunteers/{volunteerId} {
      allow get, list: if true;
      allow create, update, delete: if true;
    }

    /**
     * @description Allows read and write access to all member profiles.
     * @path /members/{memberId}
     * @allow (read, write) Any user can read or modify any member profile.
     * @deny (none) There are no restrictions.
     * @principle Allows full read and write access.
     */
    match /members/{memberId} {
      allow get, list: if true;
      allow create, update, delete: if true;
    }

    /**
     * @description Allows read and write access to all event documents.
     * @path /events/{eventId}
     * @allow (read, write) Any user can read or modify any event document.
     * @deny (none) There are no restrictions.
     * @principle Allows full read and write access.
     */
    match /events/{eventId} {
      allow get, list: if true;
      allow create, update, delete: if true;
    }

    /**
     * @description Allows read and write access to all gallery items.
     * @path /gallery/{galleryId}
     * @allow (read, write) Any user can read or modify any gallery item.
     * @deny (none) There are no restrictions.
     * @principle Allows full read and write access.
     */
    match /gallery/{galleryId} {
      allow get, list: if true;
      allow create, update, delete: if true;
    }

    /**
     * @description Allows read and write access to all fund transaction documents.
     * @path /funds/accounting/transactions/{transactionId}
     * @allow (read, write) Any user can read or modify any transaction document.
     * @deny (none) There are no restrictions.
     * @principle Allows full read and write access.
     */
    match /funds/accounting/transactions/{transactionId} {
      allow get, list: if true;
      allow create, update, delete: if true;
    }

    /**
     * @description Allows read and write access to all philanthropy activity documents.
     * @path /philanthropy/{activityId}
     * @allow (read, write) Any user can read or modify any philanthropy activity document.
     * @deny (none) There are no restrictions.
     * @principle Allows full read and write access.
     */
    match /philanthropy/{activityId} {
      allow get, list: if true;
      allow create, update, delete: if true;
    }
  }
}
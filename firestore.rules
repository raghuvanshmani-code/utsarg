rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Allows anyone to read the society metadata.
     * @path /society/meta
     * @allow (get, list)
     * @deny (create, update, delete, write)
     * @principle Public read access for society metadata.
     */
    match /society/meta {
      allow get, list: if true;
    }

    /**
     * @description Allows anyone to read the clubs collection.
     * @path /clubs/{clubId}
     * @allow (get, list)
     * @deny (create, update, delete, write)
     * @principle Public read access for club information.
     */
    match /clubs/{clubId} {
      allow get, list: if true;
    }

    /**
     * @description Allows anyone to read the volunteers collection.
     * @path /volunteers/{volunteerId}
     * @allow (get, list)
     * @deny (create, update, delete, write)
     * @principle Public read access for volunteer profiles.
     */
    match /volunteers/{volunteerId} {
      allow get, list: if true;
    }

    /**
     * @description Allows anyone to read the members collection.
     * @path /members/{memberId}
     * @allow (get, list)
     * @deny (create, update, delete, write)
     * @principle Public read access for member profiles.
     */
    match /members/{memberId} {
      allow get, list: if true;
    }

    /**
     * @description Allows anyone to read the events collection.
     * @path /events/{eventId}
     * @allow (get, list)
     * @deny (create, update, delete, write)
     * @principle Public read access for event details.
     */
    match /events/{eventId} {
      allow get, list: if true;
    }

    /**
     * @description Allows anyone to read the gallery collection.
     * @path /gallery/{photoId}
     * @allow (get, list)
     * @deny (create, update, delete, write)
     * @principle Public read access for gallery media items.
     */
    match /gallery/{photoId} {
      allow get, list: if true;
    }

    /**
     * @description Restricts access to the funds transactions collection.
     * @path /funds/transactions/{transactionId}
     * @allow get, list: if false;
     * @allow create, update, delete, write: if false;
     * @principle No public access to financial transaction logs.
     */
    match /funds/transactions/{transactionId} {
      allow read: if false;
      allow write: if false;
    }

    /**
     * @description Allows anyone to read the philanthropy activities collection.
     * @path /philanthropy/{activityId}
     * @allow get, list: if true;
     * @deny create, update, delete, write: if false;
     * @principle Public read access for philanthropy activities.
     */
    match /philanthropy/{activityId} {
      allow get, list: if true;
    }

    /**
     * @description Helper function to determine if a user is signed in.
     * @return {bool} True if the user is signed in, false otherwise.
     */
    function isSignedIn() {
      return request.auth != null;
    }
  }
}
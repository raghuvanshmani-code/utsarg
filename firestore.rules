rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check for admin custom claim
    function isAdmin() {
      return request.auth.token.admin == true;
    }

    // Global rule: Allow public read access to all documents,
    // but restrict writes to only admins.
    match /{document=**} {
      allow get, list: if true; // Explicitly allow 'get' and 'list' for public read
      allow write: if isAdmin(); // Allow create, update, delete for admins
    }
  }
}

rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper function to check for admin custom claim
    function isAdmin() {
      return request.auth != null && request.auth.token.admin == true;
    }

    // Public read for specific public-facing folders
    match /{folder}/{allPaths=**} where folder in ['public', 'clubImages'] {
      allow read: if true;
      allow write: if isAdmin();
    }

    // User-specific uploads folder
    match /userUploads/{uid}/{allPaths=**} {
      // Allow read/write for the owner of the folder or an admin
      allow read, write: if request.auth != null && (request.auth.uid == uid || isAdmin());
    }

    // Default deny for any other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

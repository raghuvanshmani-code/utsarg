
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper function to check for admin custom claim
    function isAdmin() {
      return request.auth != null && request.auth.token.admin == true;
    }

    // Public assets: Everyone can read, only admins can write.
    match /public/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // User-specific uploads: Only the authenticated user or an admin can access.
    match /userUploads/{uid}/{allPaths=**} {
      allow read, write: if request.auth != null && (request.auth.uid == uid || isAdmin());
    }
    
    // Default deny all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

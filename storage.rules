rules_version = '2';

// Helper function to check for admin custom claim
function isAdmin() {
  return request.auth != null && request.auth.token.admin == true;
}

// Helper function to check if the user is the owner
function isOwner(userId) {
  return request.auth != null && request.auth.uid == userId;
}

service firebase.storage {
  match /b/{bucket}/o {
    
    // Public folders: Anyone can read, only admins can write.
    match /public/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Club images: Same as public for simplicity.
    match /clubImages/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // User-specific uploads: Only the user or an admin can read/write.
    // The {uid} in the path must match the authenticated user's UID.
    match /userUploads/{uid}/{allPaths=**} {
      allow read, write: if isOwner(uid) || isAdmin();
    }
    
    // Deny all other access by default.
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Match the path for user-specific uploads.
    // Allow read/write access only to the authenticated user who owns the folder.
    match /userUploads/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // PUBLIC: Allow anyone to read files in the public directory
    match /public/{allPaths=**} {
      allow read;
    }
  }
}
